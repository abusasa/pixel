body {
    font-family: 'Press Start 2P', cursive;
    background-color: #000;
    color: #fff;
    text-align: center;
    margin: 0;
    padding: 0;
}
header {
    background-color: #222;
    padding: 10px;
}
nav ul {
    list-style: none;
    padding: 0;
}
nav ul li {
    display: inline;
    margin: 0 10px;
}
nav ul li a {
    color: #0f0;
    text-decoration: none;
}
nav ul li a:hover {
    text-decoration: underline;
}
section {
    margin: 20px;
}
footer {
    background-color: #222;
    padding: 10px;
}
img {
    max-width: 100%;
    height: auto;
    border: 2px solid #fff;
}
